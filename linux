 - name: set-version
          image: maven:3.8.5-openjdk-11
          script: |
            #!/bin/sh
            VERSION=$(cat /workspace/source/version.txt)
            echo "Updating project version to $VERSION"
            mvn versions:set -DnewVersion=$VERSION -DgenerateBackupPoms=false


    - name: set-version
      image: maven:3.8.5-openjdk-11
      script: |
        #!/bin/sh
        VERSION=$(cat /workspace/source/version.txt)
        echo "Updating project version to $VERSION"
        mvn versions:set -DnewVersion=$VERSION -DgenerateBackupPoms=false
