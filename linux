#!/bin/bash

# Input Java file
inputFile="YourFile.java"
# Temporary file to store modified content
outputFile="converted_variables.txt"

# Function to convert a string to uppercase
toUpper() {
    echo "$1" | awk '{print toupper($0)}'
}

# Process each line in the input file
while IFS= read -r line; do
    # Check if line contains "Assert.assertTrue(" or "Assert.assertEqual("
    if grep -qE "Assert\.assertTrue\(.*\)" <<< "$line" || grep -qE "Assert\.assertEqual\(.*\)" <<< "$line"; then
        # Extract string name between "(" and ","
        varName=$(echo "$line" | sed -E 's/Assert\.assertTrue\(.*\)([[:space:]]*|\())([[:alnum:]_]+)([[:space:]]*|,).*/\3/')
        # Convert string name to uppercase
        convertedVar=$(toUpper "$varName")
        # Replace string name in line with converted string name
        updatedLine=$(echo "$line" | sed "s/$varName/$convertedVar/g")
        echo "$updatedLine" >> "$outputFile"
    else
        echo "$line" >> "$outputFile"
    fi
done < "$inputFile"

echo "Conversion completed. Output saved to $outputFile"
