#!/bin/bash

# List of Git repo URLs
REPOS=(
  "git@github.com:your-org/repo-one.git"
  "git@github.com:your-org/repo-two.git"
  "git@github.com:your-org/repo-three.git"
)

BRANCH="sit-release"

for REPO in "${REPOS[@]}"; do
  REPO_NAME=$(basename "$REPO" .git)

  echo "ðŸ”„ Cloning $REPO_NAME..."

  git clone "$REPO"
  cd "$REPO_NAME" || exit 1

  echo "ðŸš€ Checking out branch: $BRANCH"

  # Fetch the branch in case it's not tracked
  git fetch origin "$BRANCH"
  git checkout "$BRANCH"

  cd ..
  echo "âœ… Done with $REPO_NAME"
  echo "-----------------------------"
done

echo "ðŸŽ‰ All repositories cloned and checked out to '$BRANCH'."
