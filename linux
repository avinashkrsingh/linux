EMAIL_BODY=$(cat <<EOF
<html>
<head>
    <style>
        body { font-family: Arial, sans-serif; color: #333; }
        .container { padding: 10px; border: 1px solid #ddd; border-radius: 5px; background: #f9f9f9; }
        .header { background: #007bff; color: white; padding: 10px; font-size: 18px; border-radius: 5px 5px 0 0; }
